<% if books.size > 0 %>
	<%= books.in_groups_of(6, false) do |group| %>
	  <div class="row">
			<% group.each do |book| %>
				<div class="span2">
					<%= volume = book.google_volume
							if volume && volume.image_link
								link_to image_tag(volume.image_link, alt: book.title, 
									style: "max-width: 120px; max-height: 155px;"), book_path(book), 
									rel: "popover", title: book.title 									 				
						 	else
					 		 	link_to image_tag("noImageAvailable.jpeg", alt: book.title, 
									style: "max-width: 120px; max-height: 155px;"), 
									book_path(book), rel: "popover", title: book.title
					 		end %>			
				</div>
			<% end %>
		</div>
		<br />
	<% end %>
<% else %>
	<h2>Sorry, we haven't found any books!</h2>
<% end %>
